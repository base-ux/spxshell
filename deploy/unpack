#%ifinclude sys/cmd.shi

########
# A set of unpack functions (methods)
# Arguments:
#   $1  archive file name
#   $2  directory where unpack files
# Return:
#    0  no errors
#   >0  error from called command
# Input:
#   none
# Output:
#   none
########

# 'unpack_cmd' variable must be initialized by 'find_command' function
unpack_cmd=""

# Unpack methods

unpack_pax ()
{
    cmd pax -r -f "$1" -s ",^,$2/,"
}

unpack_tar ()
{
    cmd tar -x -f "$1" -C "$2"
}
