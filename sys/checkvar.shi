#%ifinclude msg.shi

########
# Check for empty variable
# Arguments:
#   $1  variable name to check
# Return:
#    0  no errors
#    1  error
# Input:
#   none
# Output:
#   none
########

check_var ()
{
    local _var="$1"

    test -n "${_var}" || return 1
    eval test -n \"\${${_var}}\"
    if test $? -ne 0 ; then
	err "'${_var}' is not set"
	return 1
    fi
}
