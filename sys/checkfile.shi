#%ifinclude msg.shi

########
# Check file availability
# Arguments:
#   $1  file to check
# Return:
#    0  no errors
#    1  error
# Input:
#   none
# Output:
#   none
########

check_file ()
{
    local _path="$1"

    test -n "${_path}" || return 1
    if ! test -f "${_path}" ; then
	err "file '${_path}' not found"
	return 1
    fi
    if ! test -r "${_path}" ; then
	err "can't open file '${_path}'"
	return 1
    fi
}
